{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": ["es6"],
    "target": "es6",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./build"
  },
  "files": ["./src/app.ts"],
  "exclude": ["node_modules", "./src/tests"],
  "include": ["custum.d.ts", "global.d.ts"]
}
