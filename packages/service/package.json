    "precommit": "npm run prettier && npm run lint"
  },
  "dependencies": {
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.8",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.3.0",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1"
  }
}
